@startuml
!theme plain
skinparam usecase {
    BackgroundColor lightblue
    BorderColor darkblue
    FontSize 11
}
skinparam actor {
    BackgroundColor lightyellow
    BorderColor darkblue
    FontSize 11
}

title Diagrama de Casos de Uso - Sistema de Control de Acceso Peatonal

left to right direction

actor "Administrador" as Admin
actor "Empleado" as Empleado
actor "Sistema de Alertas" as SistemaAlertas <<system>>

package "Autenticación y Autorización" {
    usecase "Iniciar sesión" as UC1
    usecase "Cerrar sesión" as UC1_1
    usecase "Recuperar contraseña" as UC1_2
    usecase "Registrar usuario" as UC2
    usecase "Gestionar permisos de usuario" as UC2_1
}

package "Gestión de Empleados" {
    usecase "Registrar empleado" as UC3_1
    usecase "Editar empleado" as UC3_2
    usecase "Inactivar empleado" as UC3_3
    usecase "Consultar empleados" as UC3_4
    usecase "Gestionar empleado" as UC3 <<include>>
}

package "Control de Acceso" {
    usecase "Registrar ingreso" as UC4_1
    usecase "Registrar salida" as UC4_2
    usecase "Consultar historial de acceso" as UC4_3
    usecase "Validar acceso" as UC4_4 <<include>>
}

package "Reportes y Consultas" {
    usecase "Generar reporte de accesos" as UC5_1
    usecase "Generar reporte de empleados" as UC5_2
    usecase "Generar reporte de alertas" as UC5_3
    usecase "Exportar reportes" as UC5_4
    usecase "Generar reportes" as UC5
}

package "Gestión de Alertas" {
    usecase "Registrar alerta" as UC6
    usecase "Consultar alertas" as UC6_1
    usecase "Notificar alerta" as UC6_2 <<include>>
}

Admin --> UC1
Admin --> UC1_1
Admin --> UC1_2
Admin --> UC2
Admin --> UC2_1
Admin --> UC3
Admin --> UC5
Admin --> UC6_1

Empleado --> UC1
Empleado --> UC1_1
Empleado --> UC4_1
Empleado --> UC4_2
Empleado --> UC4_3

UC3 ..> UC3_1 : <<include>>
UC3 ..> UC3_2 : <<include>>
UC3 ..> UC3_3 : <<include>>
UC3 ..> UC3_4 : <<include>>

UC4_1 ..> UC4_4 : <<include>>
UC4_2 ..> UC4_4 : <<include>>

UC5 ..> UC5_1 : <<include>>
UC5 ..> UC5_2 : <<include>>
UC5 ..> UC5_3 : <<include>>
UC5 ..> UC5_4 : <<include>>

UC6 ..> UC6_2 : <<include>>

UC1 <.. UC6 : <<extend>>
UC4_1 <.. UC6 : <<extend>>
UC4_2 <.. UC6 : <<extend>>

UC6 --> SistemaAlertas
UC6_2 --> SistemaAlertas

@enduml

