{
  "dashboard": {
    "title": "SAGA Orchestrator Dashboard",
    "tags": ["saga", "orchestration"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Sagas Started",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(saga_started_total[5m])",
            "legendFormat": "Sagas Started"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Saga Execution Status",
        "type": "piechart",
        "targets": [
          {
            "expr": "saga_completed_total",
            "legendFormat": "Completed"
          },
          {
            "expr": "saga_compensated_total",
            "legendFormat": "Compensated"
          },
          {
            "expr": "saga_failed_total",
            "legendFormat": "Failed"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Saga Execution Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(saga_execution_time_bucket[5m]))",
            "legendFormat": "P95 Execution Time"
          },
          {
            "expr": "histogram_quantile(0.50, rate(saga_execution_time_bucket[5m]))",
            "legendFormat": "P50 Execution Time"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "refresh": "30s"
  }
}



